<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="CmbchinaFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Isobar\Cmbchina\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Isobar\Cmbchina\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Isobar\Cmbchina\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">CmbchinaValueHandlerPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="CmbchinaValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">CmbchinaConfigValueHandler</item>
                <item name="can_void" xsi:type="string">Isobar\Cmbchina\Gateway\Config\CanVoidHandler</item>
                <item name="can_cancel" xsi:type="string">Isobar\Cmbchina\Gateway\Config\CanVoidHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="CmbchinaConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Isobar\Cmbchina\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>

</config>
